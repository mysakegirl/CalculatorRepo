<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="7"
    android:background="#243441"
    
    android:id="@+id/gridLayout1">
    <TextView
        android:layout_gravity="top"
        android:layout_columnWeight="10"
        android:layout_columnSpan="4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/expressionText"
        android:textSize="50dp"
        android:textColor="#FBFBFB"
        android:gravity="bottom|right" 
        android:lineSpacingExtra="2sp"
        />
    <Button
        android:text="M+"
        android:layout_columnWeight="4"
        android:layout_rowWeight="1"
        android:textSize="24dp"
        android:background="@drawable/shadow"
        android:textColor="#EC802F"
        android:id="@+id/pushbtn" />
    <Button
        android:text="M-"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#EC802F"
        android:id="@+id/popbtn" />
    <Button
        android:text="MC"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#EC802F"
        android:id="@+id/clearstackbtn" />
    <Button
        android:text="MR"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#EC802F"
        android:id="@+id/peekbtn" />
    <Button
        android:text="AC"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#EC802F"
        android:id="@+id/clearbtn" />
    <Button
        android:text="←"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#EC802F"
        android:id="@+id/backbtn" />
    <Button
        android:text="÷"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#EC802F"
        android:id="@+id/dividebtn" />
    <Button
        android:text="7"
        android:layout_columnWeight="4"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#72818D"
        android:id="@+id/btn7" />
    <Button
        android:text="8"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#72818D"
        android:id="@+id/btn8" />
    <Button
        android:text="9"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#72818D"
        android:id="@+id/btn9" />
    <Button
        android:text="x"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#EC802F"
        android:id="@+id/timesbtn" />
    <Button
        android:text="4"
        android:layout_columnWeight="4"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#72818D"
        android:id="@+id/btn4" />
    <Button
        android:text="5"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#72818D"
        android:id="@+id/btn5" />
    <Button
        android:text="6"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#72818D"
        android:id="@+id/btn6" />
    <Button
        android:text="-"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#EC802F"
        android:id="@+id/minusbtn" />
    <Button
        android:text="1"
        android:layout_columnWeight="4"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#72818D"
        android:id="@+id/btn1" />
    <Button
        android:text="2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
        android:background="@drawable/shadow"
        android:textColor="#72818D"
        android:id="@+id/btn2" />
    <Button
        android:text="3"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#72818D"
        android:id="@+id/btn3" />
    <Button
        android:text="+"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#EC802F"
        android:id="@+id/plusbtn" />

    <Button
        android:text="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:textSize="24dp"
        android:id="@+id/btn0"
         android:background="@drawable/shadow"
        android:textColor="#72818D"
        android:typeface="sans"/>
    <Button
        android:text="."
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#72818D"
        android:id="@+id/pointbtn" />
    <Button
        android:text="="
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textSize="24dp"
         android:background="@drawable/shadow"
        android:textColor="#EC802F"
        android:id="@+id/equalbtn" />
</GridLayout>